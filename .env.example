# =============================================================================
# Personal Health Assistant - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=change-me-to-a-secure-password
POSTGRES_DB=postgres
POSTGRES_USER=postgres

# Database URL
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:54323/health_assistant

# Async Database URL (for SQLAlchemy async)
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:${POSTGRES_PASSWORD}@localhost:54323/health_assistant

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=change-me-to-at-least-32-characters-long-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Supabase JWT Secret (must be at least 32 characters)
SUPABASE_JWT_SECRET=change-me-to-at-least-32-characters-long-secret

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=http://localhost:3000
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Kafka Configuration
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------------------------------------------------------
# Neo4j Configuration (Knowledge Graph)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me-neo4j-password

# -----------------------------------------------------------------------------
# Qdrant Configuration (Vector Database)
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# -----------------------------------------------------------------------------
# AI/LLM API Keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GROQ_API_KEY=your-groq-api-key

# -----------------------------------------------------------------------------
# Nutrition API Keys
# -----------------------------------------------------------------------------
NUTRITIONIX_API_KEY=your-nutritionix-api-key
NUTRITIONIX_APP_ID=your-nutritionix-app-id
USDA_API_KEY=your-usda-api-key

# -----------------------------------------------------------------------------
# Medical/Research API Keys
# -----------------------------------------------------------------------------
PUBMED_API_KEY=your-pubmed-api-key

# -----------------------------------------------------------------------------
# Vision API Keys (for image analysis)
# -----------------------------------------------------------------------------
GOOGLE_VISION_API_KEY=your-google-vision-api-key
AZURE_VISION_API_KEY=your-azure-vision-api-key
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# -----------------------------------------------------------------------------
# EPIC FHIR Integration
# -----------------------------------------------------------------------------
EPIC_FHIR_CLIENT_ID=your-epic-client-id
EPIC_FHIR_CLIENT_SECRET=your-epic-client-secret
EPIC_FHIR_ENVIRONMENT=SANDBOX
EPIC_FHIR_REDIRECT_URI=http://localhost:8005/api/v1/medical-records/epic-fhir/callback

# -----------------------------------------------------------------------------
# Oura Ring Integration
# -----------------------------------------------------------------------------
OURA_CLIENT_ID=your-oura-client-id
OURA_CLIENT_SECRET=your-oura-client-secret
OURA_REDIRECT_URI=http://localhost:8004/api/v1/oauth/oura/callback

# -----------------------------------------------------------------------------
# Dexcom CGM Integration
# -----------------------------------------------------------------------------
DEXCOM_CLIENT_ID=your-dexcom-client-id
DEXCOM_CLIENT_SECRET=your-dexcom-client-secret
DEXCOM_REDIRECT_URI=http://localhost:8004/api/v1/oauth/dexcom/callback

# -----------------------------------------------------------------------------
# Auth0 Configuration (Optional)
# -----------------------------------------------------------------------------
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-api-audience

# -----------------------------------------------------------------------------
# SMTP Configuration (Email)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Service URLs (Internal)
# -----------------------------------------------------------------------------
AUTH_SERVICE_URL=http://localhost:8000
USER_PROFILE_SERVICE_URL=http://localhost:8001
HEALTH_TRACKING_SERVICE_URL=http://localhost:8002
VOICE_INPUT_SERVICE_URL=http://localhost:8003
DEVICE_DATA_SERVICE_URL=http://localhost:8004
MEDICAL_RECORDS_SERVICE_URL=http://localhost:8005
MEDICAL_ANALYSIS_SERVICE_URL=http://localhost:8006
NUTRITION_SERVICE_URL=http://localhost:8007
HEALTH_ANALYSIS_SERVICE_URL=http://localhost:8008
CONSENT_AUDIT_SERVICE_URL=http://localhost:8009
KNOWLEDGE_GRAPH_SERVICE_URL=http://localhost:8010
DOCTOR_COLLABORATION_SERVICE_URL=http://localhost:8011
GENOMICS_SERVICE_URL=http://localhost:8012
AI_INSIGHTS_SERVICE_URL=http://localhost:8200
ANALYTICS_SERVICE_URL=http://localhost:8210
AI_REASONING_ORCHESTRATOR_URL=http://localhost:8300
GRAPHQL_BFF_URL=http://localhost:8400

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
PROMETHEUS_ENABLED=true
SENTRY_DSN=

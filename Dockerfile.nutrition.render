# Render-specific Dockerfile for Nutrition Service (lightweight production build)
# Uses API-based recognition (OpenAI Vision) instead of heavy local ML models

FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        gcc \
        g++ \
        libpq-dev \
        curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies (lightweight production set â€“ no root requirements.txt)
COPY apps/nutrition/requirements.production.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy common directory
COPY common/ ./common/

# Copy nutrition service
COPY apps/nutrition/ ./apps/nutrition/

# Copy device_data (needed by common imports)
COPY apps/device_data/ ./apps/device_data/

# Create necessary directories
RUN mkdir -p logs uploads outputs cache

# Create non-root user
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app
USER app

# Expose port
EXPOSE 8007

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=60s --retries=5 \
    CMD curl -f http://localhost:8007/health || exit 1

# Run the application
CMD ["uvicorn", "apps.nutrition.main:app", "--host", "0.0.0.0", "--port", "8007"]

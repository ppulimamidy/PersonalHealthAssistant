{
  "id": null,
  "title": "API Gateway Service Dashboard",
  "tags": ["api-gateway", "routing", "circuit-breaker"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(api_gateway_service_requests_total[5m])) by (method, endpoint)",
          "legendFormat": "{{method}} {{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Latency per Service (p95)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_gateway_service_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "p95 {{endpoint}}"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(api_gateway_service_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50 overall"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(api_gateway_service_errors_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "errors/s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "Active Requests",
      "type": "stat",
      "targets": [
        {
          "expr": "api_gateway_service_active_requests",
          "legendFormat": "Active Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "title": "Circuit Breaker Status",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(api_gateway_service_requests_total{status_code=~\"5..\"}[5m])) by (endpoint)",
          "legendFormat": "5xx {{endpoint}}"
        },
        {
          "expr": "sum(rate(api_gateway_service_errors_total[5m]))",
          "legendFormat": "Total Errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "title": "Request Rate by Status Code",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(api_gateway_service_requests_total[5m])) by (status_code)",
          "legendFormat": "Status {{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s"
}

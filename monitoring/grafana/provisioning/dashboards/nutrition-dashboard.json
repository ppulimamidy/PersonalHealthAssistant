{
  "id": null,
  "title": "Nutrition Service Dashboard",
  "tags": ["nutrition", "meals", "food-recognition"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(nutrition_service_requests_total[5m])) by (method, endpoint)",
          "legendFormat": "{{method}} {{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Request Latency (p95)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(nutrition_service_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(nutrition_service_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(nutrition_service_errors_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "errors/s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "Active Requests",
      "type": "stat",
      "targets": [
        {
          "expr": "nutrition_service_active_requests",
          "legendFormat": "Active Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "title": "Meal Log Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(nutrition_service_requests_total{endpoint=~\"/api/v1/meals.*\"}[5m])) by (method)",
          "legendFormat": "Meals {{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "title": "Food Recognition Requests",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(nutrition_service_requests_total{endpoint=~\"/api/v1/food-recognition.*|/api/v1/recognize.*\"}[5m])) by (status_code)",
          "legendFormat": "Status {{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s"
}
